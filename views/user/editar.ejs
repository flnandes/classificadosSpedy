<%- include ../layouts/header.ejs %>	
		
<% if (messages.error) { %>
	<p style="color:red"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
	<p style="color:green"><%- messages.success %></p>
<% } %>

<form action="/users/editar/<%= id %>" method="post" name="form1">
	<table width="25%" border="0">
		<tr> 
			<td>Titulo</td>
			<td><input type="text" name="titulo" id="name" value="<%= titulo %>" /></td>
		</tr>
		<tr> 
			<td>Data do Classificado</td>
			<td><input type="text" name="dataClas" value="<%= dataClas %>" />xx.xx.xxxx</td>
		</tr>
		<tr> 
			<td>Descrição</td>
			<td><input type="text" name="descricao" value="<%= descricao %>" /></td>
		</tr>
		<tr> 
			<td></td>
			<td><input type="submit" name="Submit" value="Editar" /></td>
		</tr>
	</table>
	<input type="hidden" name="_method" value="PUT" />
</form>

